{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"types": ["node"],
		"strictNullChecks": true,
		"lib": ["ES2022"],
		"experimentalDecorators": true,
		"verbatimModuleSyntax": true
	},
	"include": ["**/*.ts"]
}
